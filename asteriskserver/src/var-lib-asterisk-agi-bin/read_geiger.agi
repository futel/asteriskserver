#!/usr/bin/env python
"""
Read geiger counter output.
"""

from asterisk import *
import util
import time

agi = agi.AGI()

#GEIGER_PIPE = '/tmp/pipe'
GEIGER_PIPE = '/dev/ttyUSB0'

# http://radiationsurvival.blogspot.com/
